{
    "name": "keepsuit/liquid",
    "description": "PHP implementation of liquid markup language",
    "keywords": [
        "keepsuit",
        "liquid"
    ],
    "homepage": "https://github.com/keepsuit/php-liquid",
    "license": "MIT",
    "authors": [
        {
            "name": "Fabio Capucci",
            "email": "f.capucci@keepsuit.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "symfony/yaml": "^6.0"
    },
    "require-dev": {
        "laravel/pint": "^1.2",
        "pestphp/pest": "^2.6",
        "pestphp/pest-plugin-arch": "^2.0",
        "phpstan/phpstan": "^1.10",
        "spatie/invade": "^2.0",
        "spatie/ray": "^1.28",
        "symfony/console": "^6.3"
    },
    "suggest": {
        "ext-yaml": "Used to parse YAML files with better performance than symfony/yaml"
    },
    "autoload": {
        "psr-4": {
            "Keepsuit\\Liquid\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Keepsuit\\Liquid\\Tests\\": "tests",
            "Keepsuit\\Liquid\\Performance\\": "performance"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint",
        "lint": "vendor/bin/phpstan analyse",
        "benchmark": "@php performance/benchmark.php"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
